{
  "name": "caxa",
  "version": "0.0.1",
  "description": "Package Node.js applications into executable binaries",
  "main": "lib/index.js",
  "bin": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": "leafac/caxa",
  "keywords": [
    "packing",
    "deployment",
    "binary"
  ],
  "author": "Leandro Facchinetti <caxa@leafac.com> (https://leafac.com)",
  "license": "MIT",
  "bugs": "https://github.com/leafac/caxa/issues",
  "homepage": "https://github.com/leafac/caxa#readme",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "prettier --check \"src/**/*\" --end-of-line auto && jest",
    "prepare": "tsc",
    "build": "rm -rf stubs untar && go build -o stubs/linux src/stub.go && printf \"##########\" >> stubs/linux && echo \"node --version\" >> stubs/linux && tar -czf - src/stub.go >> stubs/linux && stubs/linux"
  },
  "dependencies": {
    "archiver": "^5.2.0",
    "commander": "^7.0.0",
    "crypto-random-string": "^3.3.0",
    "dedent": "^0.7.0",
    "execa": "^4.1.0",
    "fs-extra": "^9.1.0"
  },
  "devDependencies": {
    "@types/archiver": "^5.1.0",
    "@types/dedent": "^0.7.0",
    "@types/fs-extra": "^9.0.7",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.26",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "rootDir": "src"
  }
}
